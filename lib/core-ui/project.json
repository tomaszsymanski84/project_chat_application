{
  "name": "core-ui",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "master",
        "preset": "conventional",
        "postTargets": ["core-ui:npm", "core-ui:github"],
        "releaseAs": "patch"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "lib/core-ui",
        "commands": ["npm publish --access public"],
        "parallel": false
      }
    }
  }
}
